{
	"compilerOptions": {
		"target": "es6",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"outDir": ".tmp",
		"baseUrl": ".",
		"paths": {
			"frest": ["./src/frest/index.ts"],
			"frest/*": ["./src/frest/*"],
			"frest-interceptor-json/*": ["./src/frest-interceptor-json/*"]
		}
	},
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false,
	"awesomeTypescriptLoaderOptions": {
		"useCache": true,
		"useBabel": true
	}
}
