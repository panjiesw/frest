{
	"compilerOptions": {
		"target": "es6",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"outDir": ".tmp",
		"baseUrl": ".",
		"paths": {
			"frest/*": ["./src/frest/*"]
		}
	},
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false,
	"awesomeTypescriptLoaderOptions": {
		"useCache": true,
		"useBabel": true
	}
}
