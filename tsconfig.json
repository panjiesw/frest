{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es5",
			"es2015.promise",
			"dom"
		],
		"module": "es6",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"importHelpers": true,
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false
}
