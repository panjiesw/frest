{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "declarationMap": true,
    "removeComments": false,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "lib",
    "composite": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
