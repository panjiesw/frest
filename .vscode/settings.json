// Place your settings in this file to overwrite default and user settings.
{
  "css.validate": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80],
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.idea": true,
    "**/.iml": true
  },
  "licenser.projectName": "frest",
  "licenser.license": "AL2",
  "licenser.useSingleLineStyle": false,
  "stylelint.enable": false,
  "tslint.enable": false,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "xo.enable": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "docthis.includeAuthorTag": false,
  "docthis.includeMemberOfOnClassMembers": false,
  "docthis.includeMemberOfOnInterfaceMembers": false,
	"docthis.includeTypes": false,
	"jest.autoEnable": false
}
