// Place your settings in this file to overwrite default and user settings.
{
	"css.validate": false,
	"editor.tabSize": 2,
	"editor.insertSpaces": true,
	"editor.detectIndentation": true,
	"editor.renderWhitespace": "boundary",
	"editor.rulers": [
		80
	],
	"eslint.enable": false,
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/.idea": true,
		"**/.iml": true
	},
	"licenser.projectName": "frest",
	"licenser.license": "AL2",
	"licenser.useSingleLineStyle": false,
	"stylelint.enable": false,
	"tslint.enable": true,
	"tslint.ignoreDefinitionFiles": true,
	"tslint.exclude": [
		"**/build/**",
		"**/es/**",
		"**/lib/**",
		"**/umd/**",
		"**/node_modules/**"
  ],
	"typescript.tsdk": "./node_modules/typescript/lib",
	"xo.enable": false,
	"prettier.singleQuote": true,
	"prettier.useTabs": false,
	"prettier.trailingComma": "all",
	"prettier.printWidth": 80,
	"docthis.includeAuthorTag": false,
	"docthis.includeMemberOfOnClassMembers": false,
	"docthis.includeMemberOfOnInterfaceMembers": false,
	"docthis.includeTypes": false
}
